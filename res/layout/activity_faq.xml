<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbarStyle="insideOverlay"
    android:background="#FFFFFF"
    tools:context="com.S22.bloqueo.FAQActivity" >
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="¿Que permisos usa la aplicacion y porque?"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView 
            android:text="Aunque en Play Store se describen los permisos generales y que pueden hacerte dudar sobre la privacidad y seguridad de tu informacion personal, te detallamos para que y como es usado cada uno de los permisos que te solicitamos."
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    	<LinearLayout 
        	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="INTERNET - ACCESS NETWORK STATE - ACCESS WIFI STATE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Es usado para ver el estado de la conexión a internet (si existe conexion o no) y hacer peticiones de datos."/>    
        </LinearLayout>
        
        <LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="WRITE_EXTERNAL_STORAGE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Es utilizado para almacenar datos en cache, es directamente administrado por Google Play Services al mostrar y actualizar el mapa."/>    
		</LinearLayout>
        
        
         <LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="READ_GSERVICES"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Permite leer el estado y configuraciones de Google Play Services."/>    
		</LinearLayout>
		
        <LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="ACCESS_COARSE_LOCATION - ACCESS_FINE_LOCATION" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Permite accesar a la ubicacion aproximada y/o precisa del dispositivo para mostrar un punto de referencia respecto a los marcadores."/>    
		</LinearLayout> 
         
		<LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="BROADCAST_STICKY" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Es usado para enviar transmisiones persistentes y obtener las notificaciones de la manera mas inmediata posible"/>    
		</LinearLayout> 
         
        
		<LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="READ_PHONE_STATE" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Es usado para obtener el identificador de dispositivo y registrarlo en el sistema de notificaciones"/>    
		</LinearLayout> 
        
		        
		<LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="GET_ACCOUNTS" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Es usado para leer las cuentas de Google existentes en el telefono, identificarlas y asociarlas al identificador del dispositivo para el sistema de notificaciones." />
    
		</LinearLayout> 
		
		
				        
		<LinearLayout 
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="WAKE_LOCK" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Permite activar el dispositivo desde un estado de hibernacion o pantalla oscurecida."/>    
		</LinearLayout> 
		
		
						
	</LinearLayout>
  
</ScrollView>
